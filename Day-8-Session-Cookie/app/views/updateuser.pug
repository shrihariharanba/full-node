doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Signup Form
  body
    section.container
      .login
        h1 Create a Product
        form(method='post', action=`http://localhost:3002/user/detail/update/${user.id}`)
          p
            input(type='text', name='fname', value=`${user.fname}`, placeholder='firstName', required='')
          p
            input(type='text', name='lname', value=`${user.lname}`, placeholder='lastName', required='')
          p
            input(type='number', name='mobile', value=`${user.mobile}`, placeholder='mobile number', required='')
          p
            input(type='email', name='email', value=`${user.email}`, placeholder='email', required='')
          p
            input(type='text', name='username', value=`${user.username}`, placeholder='User Name', required='')
          p
            input(type='password', name='pwd', value=`${user.password}`, placeholder='Password', required='')
          p.submit
            input(type='submit', name='', value='update')
